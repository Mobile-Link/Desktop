<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:MobileLink_Desktop.ViewModels"
             xmlns:mobileLinkDesktop="clr-namespace:MobileLink_Desktop"
             x:Class="MobileLink_Desktop.MainWindow"
             x:DataType="viewModels:MainWindowViewModel">
    <mobileLinkDesktop:MainLayout.Content>
        <Grid>
            <TextBox Text="{Binding Message}" />
            <Button Click="SendFile">Send</Button>
        </Grid>
    </mobileLinkDesktop:MainLayout.Content>
</UserControl>